{
  "name": "MamboPlatform",
  "schema": {
    "type": "object",
    "properties": {
      "email": {
        "title": "Email",
        "type": "string",
        "required": true
      },
      "password": {
        "title": "Password",
        "type": "string",
        "required": true,
        "default": ""
      },
      "token": {
        "title": "Token (opcional)",
        "type": "string",
        "default": ""
      },
      "recipes": {
        "title": "Recetas",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "id": { "type": "number" },
            "name": { "type": "string" },
            "steps": { "type": "array" }
          }
        }
      }
    }
  }
}